<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - PostgresTest</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    
    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <form method="get" asp-controller="Search" asp-action="Index" asp-route-name="@ViewBag.Name">
                    <input class="form-control" placeholder="Search" name="searchString" />
                    <input type="submit" class="btn btn-success" value="Find" />
                </form>
                <a class="btn btn-sm btn-primary" asp-controller="Home" asp-action="Index" asp-route-name="@ViewBag.Name">Home Page</a>
                @if (ViewBag.Status < 2)
                {
                    <a class="btn btn-sm btn-primary" asp-controller="Admin" asp-action="Index">Admin Panel</a>
                }
                @if (ViewBag.Status < 3)
                {
                    <a class="btn btn-sm btn-primary" asp-controller="Profile" asp-action="Index" asp-route-name="@User.Identity.Name">Profile</a>
                    <a class="btn btn-sm btn-dark" asp-controller="Account" asp-action="Logout">Logout</a>
                }
                else { 
                    <a class="btn btn-sm btn-success" asp-controller="Account" asp-action="Login">Login</a>
                }

            </div>
           
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
