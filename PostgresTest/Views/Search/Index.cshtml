
@model IEnumerable<Item>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row-cols-md-6 m-3 align-self-center justify-content-center">
        <table class="table table-striped">
            <tr>
                <th>Name</th>
                <th>Collection</th>
                <th>Owner</th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td><a asp-controller="Item" asp-action="Index" asp-route-name="@ViewBag.Name" asp-route-itemId="@item.Id" asp-route-id="@item.Collection.Id">@item.Name</a></td>
                    <td>
                        <a asp-controller="Collection" asp-action="Index" asp-route-name="@ViewBag.Name" asp-route-id="@item.Collection.Id">
                            @item.Collection.CollectionName
                        </a>
                    </td>
                    <td>@item.Collection.User.UserName</td>
                </tr>
            }
        </table>
</div>
